<%- include("partials/header") -%>

<div class="box" id="heading">

    <h1> <%= listTitle %> </h1>


    <%if(listTitle!='Today'){%>
    <form action="/deleteList" method='post'>
        <button id= "removeButton" type="submit" name="listId" value="<%= id%>"><i class="fas fa-trash-alt"></i></button>
    </form>
    <%}%>

</div>

<div class="box">
    <% items.forEach(function(item){%>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= item._id %>" onclick="this.form.submit()">
            <p><%= item.item %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>">
    </form>
    <% });%>


    <form class="item" action="/" method="post">
        <input type="text" name="item" placeholder="New Item" required>
        <button id="addButton" type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
</div>

<%- include("partials/footer") -%>